<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.afedaxo">

    <uses-feature
            android:name="android.hardware.camera"
            android:required="true"/>

    <uses-permission android:name="android.permission.CAMERA"/>

    <application
            android:name=".AfedaxoApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.ChooseParamsActivity"
                  android:theme="@style/MyTheme"
        />
        <activity
                android:theme="@style/MyTheme"
                android:name=".ui.activity.ResultActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:theme="@style/MyTheme"
                android:name=".ui.activity.SelectRegionActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:theme="@style/MyTheme"
                android:name=".ui.activity.PhotoTakingActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:theme="@style/MyTheme"
                android:name=".ui.activity.FoodListActivity"
                android:screenOrientation="portrait"/>

        <meta-data
                android:name="com.google.firebase.ml.vision.DEPENDENCIES"
                android:value="ocr"/>

        <activity
                android:name=".ui.activity.MainActivity"
                android:screenOrientation="portrait"
                android:theme="@style/MyTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>